.head-toolbar
  display: flex
  justify-content: space-between
  border-bottom: 1px solid #f1f1f1
  padding: 0 20px

.edit-toolbar
  height: 40px
  box-sizing: border-box;
.edit-content
  height: calc(100% - 40px - 26px);
  position: relative

.status-bar
  position: relative;
  background: #1c1c1e;
  border-top: 1px solid #343434;
  color: #ccc;
  display: block;
  box-sizing: border-box;
  font-size: 11px;
  line-height: 25px;
  height: 26px;
  .status-info
    color: #ccc;
    left: 10px;
    position: absolute;
    white-space: nowrap;
    max-width: 65%;
    overflow: hidden;
    text-overflow: ellipsis;

  .status-info div
    display: inline;

  .status-file
    color: #9a9a9a;

.status-other
  position absolute
  right 10px
  max-width 35%
  overflow hidden
  .help
    cursor pointer
    color #ccc
    font-size: 16px

.tool-mobile
  position: relative;
  background: #1c1c1e;
  border-top: 1px solid #343434;
  color: #ccc;
  display: none;
  box-sizing: border-box;
  font-size: 11px;
  line-height: 40px;
  height: 40px;

.tool-view-mobile
  position: relative;
  background: #ffffff;
  border-top: 1px solid #eaeaea;
  color: #333;
  display: none;
  box-sizing: border-box;
  font-size: 11px;
  line-height: 40px;
  height: 40px;

@media only screen and (max-width 768px)
  .tool-mobile
  .tool-view-mobile
    display block !important;
  .edit-toolbar
  .status-bar
    display none !important
  .edit-content
  .v-show-content
    height: calc(100% - 40px) !important;