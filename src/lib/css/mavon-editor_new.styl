.head-toolbar
  display: flex
  justify-content: space-between
  border-bottom: 1px solid #f1f1f1
  padding: 0 20px

.edit-toolbar
  height: 41px
.edit-content
  height: calc(100% - 41px - 26px);
  position: relative

.status-bar
  position: relative;
  background: #1c1c1e;
  border-top: 1px solid #343434;
  color: #ccc;
  display: block;
  box-sizing: border-box;
  font-size: 11px;
  line-height: 25px;
  height: 26px;
  .status-info
    color: #ccc;
    left: 10px;
    position: absolute;
    white-space: nowrap;
    max-width: 65%;
    overflow: hidden;
    text-overflow: ellipsis;

  .status-info div
    display: inline;

  .status-file
    color: #9a9a9a;
